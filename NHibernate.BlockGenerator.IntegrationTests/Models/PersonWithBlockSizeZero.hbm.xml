  <class name="PersonWithBlockSizeZero" table="PersonWithBlockSizeZero">

    <id name="Id">
      <column name="Id" sql-type="bigint" not-null="true"/>
      <generator class="NHibernate.BlockGenerator.TableBlockGenerator, NHibernate.BlockGenerator">
